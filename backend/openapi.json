{
  "openapi": "3.0.3",
  "info": {
    "title": "QatarCash API",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/payments": {
      "post": {
        "summary": "Create payment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created"
          }
        }
      }
    },
    "/api/payments/{id}": {
      "get": {
        "summary": "Get status",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/payments/refunds": {
      "post": {
        "summary": "Refund",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/webhooks/qatarcash": {
      "post": {
        "summary": "Webhook",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
